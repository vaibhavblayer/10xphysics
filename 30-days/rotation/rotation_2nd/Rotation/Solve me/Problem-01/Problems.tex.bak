%%%%   PROBLEM-01  %%%%%

\begin{question}
Find the moment of inertia of the rod $AB$ about an axis $YY'$ as shown in figure. Mass of the rod is $m$ and length is $l$.
\end{question}

{\physics}

\begin{center}
\begin{tikzpicture}[use optics,thick,decoration={
    markings,
    mark=at position 0.3 with {\arrow{Stealth}}},every node/.style={scale=0.85},scale=1]
\draw[dashed] (0,-2) node[left]{$Y$}--(0,2.5) node[left]{$Y'$} node[below] {\AxisRotator[rotate=-90]};
\draw[line width=5,line cap=round] (0,0) coordinate (b) node[left]{$A$}--([turn]125:3) coordinate (a) node[right]{$B$};
\coordinate (c) at (0,2);
\pic [thick,draw=black,"$\theta$", angle eccentricity=1.45,angle radius=0.6cm] {angle = a--b--c};
\end{tikzpicture}
\end{center}


\pagebreak


\pagestyle{empty}

\begin{center}
{\solution}
\end{center}

\begin{center}
\begin{tikzpicture}[>=Stealth,use optics,thick,decoration={
    markings,
    mark=at position 0.3 with {\arrow{Stealth}}},every node/.style={scale=0.75},scale=1.65]
\draw[dashed] (0,-2) node[left]{$Y$}--(0,2.5) node[left]{$Y'$} node[below] {\AxisRotator[rotate=-90]};

	\begin{scope}[rotate=35]
		\draw[line width=6,line cap=round] (0,0) coordinate (b) node[left]{$A$}--(3,0) coordinate (a) node[right]{$B$};
		\draw[tomato,line width=6] (1.75,0) --(2,0);
		\draw[thick,->] (0,-0.25)--(1.6,-0.25) node[midway, below]{$x$} node[rotate=35,right]{$dx$};
	\end{scope}

\draw[thick] (-0.2,0) to[dim arrow={label=$x\cos\theta$}] (-0.2,1.2);
\draw[thick,->] (0,1.2)--(1.5,1.2) node[midway, above]{$x\sin\theta$} ;
\draw [dashed] (0,1.15) ellipse(1.53 and 0.35);
\coordinate (c) at (0,2);
\pic [thick,draw=black,"$\theta$", angle eccentricity=1.45,angle radius=0.6cm] {angle = a--b--c};
\end{tikzpicture}
\end{center}


{\physics}

\pagebreak

\begin{center}
{\solution}
\end{center}


\begin{note}
Differential element $dx$ with have mass $dm$
\begin{align*}
dm &= \lambda \; dx \quad \quad \lambda = \textit{linear mass density} \\
dm &= \dfrac{m}{l}  \; dx \quad \quad \quad \lambda = \dfrac{m}{l}\\
\end{align*}

Differential element $dx$ will rotate around the axis with a radius of $x\sin\theta$ and $\theta$ will remain constant for every element of the rod so,  $r=x\sin\theta$

\end{note}

{\physics}

\pagebreak

\begin{center}
{\solution}
\end{center}

\begin{note}

From the definition of moment of inertia $I=mr^2$
\begin{align*}
dI &= r^2 \; dm \\[4 mm]
dI  &= \left( x\sin\theta \right)^2 \; \dfrac{m}{l}  \; dx \\[4 mm]
\int dI  &= \dfrac{m}{l} \; \sin^2\theta \; \int_0^l x^2 \; dx \\[4 mm]
I &= \dfrac{ml^2}{3} \; \sin^2\theta
\end{align*}


\end{note}

{\physics}


