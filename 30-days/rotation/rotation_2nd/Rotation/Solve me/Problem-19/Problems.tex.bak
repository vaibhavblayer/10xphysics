{\solution}
\end{center}

\begin{calculations}
Simplest problem ever \Smiley[2]


\begin{align*}
\vec{L} &= \vec{r} \times \vec{p} \\
\left| \vec{L}  \right| &= \left| \vec{r} \times \vec{p}  \right| \\[5 mm]
L &= mvR
\end{align*}
